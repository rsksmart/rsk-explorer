@import './vars.styl'
@import './mixins.styl'
$colors = json('../../config/colors.json',{ hash: true })
// generates colors classes
 for color in $colors
   apply-color(color,$colors[color])

apply-colors('error' 'info' 'warn' 'brand','$')

$disabled = $gray

.bg-brand1
  color brand3
.bg-brand2
  color brand2
.bg-brand3    
  color grays

.dark
  color: color1

.selected
  color $txt-color !important
  background $dark

.disabled
  color $disabled